<label for="title">
	Title: <input type="text" name="song[title]" value="<%= @song.title%>">
</label>

<label for="length">
	Length: <input type="number" name="song[length]" value="<%= @song.length%>">
</label>
<label for = "released_on">
	Date(mm/dd/yyyy): <input type="text" name="song[released_on]" value="<%=@song.released_on.strftime("%m/%d/%Y") if @song.released_on%>">
</label>
<label for="lyrics">
	Lyrics: <textarea name=song[lyrics]><%= @song.lyrics %></textarea>
</label>
<br>
<br>
<input type="submit" value="Save Song">
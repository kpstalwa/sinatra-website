<% minutes = @song.length/60 %>
<% seconds = @song.length % 60 %>
<h1><%= @song.title %></h1>
<% if @song.released_on %>
<p>Release Date: <%= @song.released_on.strftime("%e %B %Y")%></p>
<p>Length: <%= minutes %> minutes and <%= seconds %> seconds</p>
<% end%>
<pre><%= @song.lyrics %></pre>
<p><a href="/songs">Back to songs index</a></p>
<p><a href="/songs/<%=@song.id%>/edit">Edit this song</a></p>
<form action="/songs/<%=@song.id%>" method="POST">
<input type="hidden" name="_method" value="DELETE">
<input type="submit" value="delete this song">
</form>